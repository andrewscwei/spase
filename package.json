{
  "name": "spase",
  "version": "6.6.0",
  "description": "Micro library for performing 2D spatial calculations of DOM elements",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && webpack --config config/build.conf.ts",
    "pages": "rimraf .gh-pages && webpack --config demo/config/dev.conf.ts",
    "demo": "npm run clean && concurrently \"cross-env NODE_ENV=production npm run build --watch \" \"wait-on build && cross-env NODE_ENV=development webpack-cli serve --mode development --hot --config demo/config/dev.conf.ts --port 8080\"",
    "test": "echo \"No tests yet\"",
    "lint": "eslint --ext .ts src config demo",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "browser",
    "window",
    "viewport",
    "element",
    "dimension",
    "utility",
    "2d",
    "typescript",
    "rect"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewscwei/spase.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.14",
    "@babel/preset-typescript": "^7.22.11",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/node": "^20.5.9",
    "@types/webpack": "^5.28.2",
    "@types/webpack-env": "^1.18.1",
    "@types/webpack-node-externals": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-node-externals": "^3.0.0"
  },
  "types": "build/index.d.ts"
}
